<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ดูข้อมูลคะแนน"
            android:textColor="#00BCD4"
            android:layout_marginTop="15dp"
            android:textSize="14dp"
            android:layout_marginStart="15dp"/>

        <Button
            android:id="@+id/myscore2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="แบบฝึกที่ 2"
            android:stateListAnimator="@null"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:textSize="14dp"
            android:background="@android:color/white"
            android:gravity="left|center_vertical" />

        <Button
            android:id="@+id/myscore3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="แบบฝึกที่ 3"
            android:stateListAnimator="@null"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:textSize="14dp"
            android:background="@android:color/white"
            android:gravity="left|center_vertical" />

        <Button
            android:id="@+id/myscore4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="แบบฝึกที่ 4"
            android:stateListAnimator="@null"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:textSize="14dp"
            android:background="@android:color/white"
            android:gravity="left|center_vertical" />

        <Button
            android:id="@+id/myscore5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="แบบฝึกที่ 5"
            android:stateListAnimator="@null"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:textSize="14dp"
            android:background="@android:color/white"
            android:gravity="left|center_vertical" />

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="1dp"
            android:textSize="14dp"
            android:background="#DBDBDB"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#00BCD4"
            android:text="ฐานข้อมูล"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"/>

        <Button
            android:id="@+id/Word_Data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ดูฐานข้อมูลคำศัพท์"
            android:layout_marginTop="10dp"
            android:stateListAnimator="@null"
            android:layout_marginStart="15dp"
            android:textSize="14dp"
            android:background="@android:color/white"
            android:gravity="left|center_vertical" />

        <Button
            android:id="@+id/Sentence_Data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ดูฐานข้อมูลประโยค"
            android:layout_marginTop="10dp"
            android:stateListAnimator="@null"
            android:layout_marginStart="15dp"
            android:textSize="14dp"
            android:background="@android:color/white"
            android:gravity="left|center_vertical" />

    </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>